  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <% flash.each do |key, message| %>
        <div class="text-center alert 
          alert-<%= key == 'notice' ? 'success' : 'danger' %>">
          <%= message %>
        </div>
      <% end %>
      
    <%= yield %>
  </div>      
</div>